generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Table =  CREATE TABLE TABLE_NAME (...)
// Model

model Courses {
  id          String   @id @default(uuid()) // generate id automatically
  name        String   @unique
  description String? // ? indicates optional field
  duration    Int
  created_at  DateTime @default(now())

  @@map("courses")
}

model Modules {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  created_at  DateTime @default(now())

  @@map("modules")
}
